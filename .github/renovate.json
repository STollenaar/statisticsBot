{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "description": "Renovate configuration for Docker + Go + Terragrunt + Terraform",
    "enabledManagers": [
        "dockerfile",
        "gomod",
        "terraform",
        "terragrunt"
    ],
    "terraform": {
        "enabled": true,
        "managerFilePatterns": [
            "/(^|/)versions\\.tf\\.json$/"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "matchUpdateTypes": [
                "pin",
                "pinDigest",
                "digest",
                "patch",
                "minor"
            ],
            "groupName": "go modules",
            "automerge": true
        },
        {
            "matchManagers": [
                "terraform",
                "terragrunt"
            ],
            "ignorePaths": [
                "**/grunt_providers.tf",
                "**/grunt_versions.tf",
                "**/grunt_backend.tf"
            ],
            "groupName": "terraform providers"
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "groupName": "helm charts"
        },
        {
            "matchManagers": [
                "terraform"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": false
        }
    ],
    "schedule": [
        "at any time"
    ],
    "commitMessagePrefix": "chore(deps): "
}